<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonBase" >
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ButtonBase.Udacity">
        <item name="android:background">@color/button_udacity</item>
    </style>

    <style name="ButtonBase.Capstone">
        <item name="android:background">@color/button_capstone</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
